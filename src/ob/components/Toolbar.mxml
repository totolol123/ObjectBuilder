<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:nail="library://ns.nail.com/naillib"
         creationComplete="creationCompleteHandler(event)">
    
    <fx:Script>
        <![CDATA[
            import mx.core.FlexGlobals;
            import mx.events.FlexEvent;
            
            import nail.components.skins.IconButtonSkin;
            
            import ob.commands.SetClientInfoCommand;
            import ob.core.IObjectBuilder;
            
            import otlib.assets.Assets;
            import otlib.utils.ClientInfo;
            
            //--------------------------------------------------------------------------
            // PROPERTIES
            //--------------------------------------------------------------------------
            
            private var m_application:IObjectBuilder;
            
            //--------------------------------------------------------------------------
            // METHODS
            //--------------------------------------------------------------------------
            
            //--------------------------------------
            // Private
            //--------------------------------------
            
            private function onClientInfo(info:ClientInfo):void
            {
                openFindWindowButton.enabled = info.loaded;
                compileButton.enabled = (m_application.clientChanged && !m_application.clientIsTemporary);
                compileAsButton.enabled = m_application.clientLoaded;
            }
            
            //--------------------------------------
            // Event Handlers
            //--------------------------------------
            
            protected function creationCompleteHandler(event:FlexEvent):void
            {
                m_application = IObjectBuilder(FlexGlobals.topLevelApplication);
                m_application.registerCallback(SetClientInfoCommand, onClientInfo);
            }
            
            protected function buttonClickHandler(event:MouseEvent):void
            {
                switch (event.target)
                {
                    case newButton:
                        m_application.createNewProject();
                        break;
                    
                    case openButton:
                        m_application.openProject();
                        break;
                    
                    case compileButton:
                        m_application.compileProject();
                        break;
                    
                    case compileAsButton:
                        m_application.compileProjectAs();
                        break;
                    
                    case openFindWindowButton:
                        m_application.openFinder();
                        break;
                    
                    case openObjectViewerButton:
                        m_application.openObjectViewer();
                        break;
                    
                    case openSlicerButton:
                        m_application.openSlicer();
                        break;
                    
                    case openAnimationEditorButton:
                        m_application.openAnimationEditor();
                        break;
                    
                    case openLogWindowButton:
                        m_application.openLogWindow();
                        break;
                }
            }
            
        ]]>
    </fx:Script>
    
    <!-- highlight -->
    <s:Rect left="-1" right="-1" top="1" bottom="0">
        <s:stroke>
            <s:SolidColorStroke color="0x636363"/>
        </s:stroke>
    </s:Rect>
    
    <!-- border -->
    <s:Rect left="-1" right="-1" top="0" bottom="0">
        <s:stroke>
            <s:SolidColorStroke color="0x272727"/>
        </s:stroke>
    </s:Rect>
    
    <s:Group id="buttonsGroup"
             width="100%"
             height="100%">
        
        <s:layout>
            <s:HorizontalLayout paddingLeft="10"
                                paddingRight="10"
                                verticalAlign="middle"/>
        </s:layout>
        
        <s:Button id="newButton"
                  width="25"
                  height="25"
                  toolTip="{resourceManager.getString('strings', 'menu.new')}"
                  icon="{Assets.NEW_FILE}"
                  skinClass="nail.components.skins.IconButtonSkin"
                  click="buttonClickHandler(event)"/>
        
        <s:Button id="openButton"
                  width="25"
                  height="25"
                  toolTip="{resourceManager.getString('strings', 'menu.open')}"
                  icon="{Assets.OPEN}"
                  skinClass="nail.components.skins.IconButtonSkin"
                  click="buttonClickHandler(event)"/>
        
        <s:Button id="compileButton"
                  width="25"
                  height="25"
                  toolTip="{resourceManager.getString('strings', 'menu.compile')}"
                  icon="{Assets.SAVE}"
                  enabled="false"
                  skinClass="nail.components.skins.IconButtonSkin"
                  click="buttonClickHandler(event)"/>
        
        <s:Button id="compileAsButton"
                  width="25"
                  height="25"
                  enabled="false"
                  toolTip="{resourceManager.getString('strings', 'menu.compileAs')}"
                  icon="{Assets.SAVE_AS}"
                  skinClass="nail.components.skins.IconButtonSkin"
                  click="buttonClickHandler(event)"/>
        
        <nail:ShadowLine height="20"/>
        
        <s:Button id="openFindWindowButton"
                  width="25"
                  height="25"
                  enabled="false"
                  toolTip="{resourceManager.getString('strings', 'find')}"
                  icon="{Assets.BINOCULARS}"
                  skinClass="nail.components.skins.IconButtonSkin"
                  click="buttonClickHandler(event)"/>
        
        <s:Button id="openObjectViewerButton"
                  width="25"
                  height="25"
                  toolTip="{resourceManager.getString('strings', 'objectViewer')}"
                  icon="{Assets.VIEWER}"
                  skinClass="nail.components.skins.IconButtonSkin"
                  click="buttonClickHandler(event)"/>
        
        <s:Button id="openSlicerButton"
                  width="25"
                  height="25"
                  toolTip="Slicer"
                  icon="{Assets.SLICER}"
                  skinClass="nail.components.skins.IconButtonSkin"
                  click="buttonClickHandler(event)"/>
        
        <s:Button id="openAnimationEditorButton"
                  width="25"
                  height="25"
                  toolTip="{resourceManager.getString('strings', 'animationEditor')}"
                  icon="{Assets.ANIMATION}"
                  skinClass="nail.components.skins.IconButtonSkin"
                  click="buttonClickHandler(event)"/>
        
        <nail:ShadowLine height="20"/>
        
        <s:Button id="openLogWindowButton"
                  width="25"
                  height="25"
                  toolTip="{resourceManager.getString('strings', 'menu.logWindow')}"
                  icon="{Assets.LOG}"
                  skinClass="nail.components.skins.IconButtonSkin"
                  click="buttonClickHandler(event)"/>
    </s:Group>
</s:Group>
